{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "./",
    "mapRoot": "./dist",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src", "test", "examples"],
  "exclude": ["node_modules"]
}