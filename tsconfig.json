{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "declarationDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}